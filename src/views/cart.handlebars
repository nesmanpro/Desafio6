

<section class="mainCart">
    <h1>Cart Details</h1>
    <span>cart ID: {{cartId}}</span>
    <main class="cartSection">
    {{#each productos}}
    <div class="cartCard ">
        <div class="cartBody">
            <h5 class="cardTitle">Producto: {{this.product.title}}</h5>
            <p class="cardText">Cantidad: {{this.quantity}}</p>
            <p class="cardText">Precio: ${{this.product.totalPrice}}</p>
            <button id="deleteProds" data-cart-id="{{this.cartId}}" data-product-id="{{this.product._id}}" class="btn btn-danger" onclick="deleteProds(this.dataset.cartId,this.dataset.productId)">Eliminar</button>
        </div>
    </div>
    {{/each}}
    </main>
</section>

<div class="btns2">
<div class="btns2">
<a href="/products">
    <button class="btnSec"> 
        Atras
    </button>
</a>
<a href="/api/carts/{{this.cartId}}/purchase">
    <button class="btnSec"> 
        Checkout
    </button>
</a>

</div>
<button class="btnVaciar" id="emptyCart" data-cart-id="{{this.cartId}}" onclick="emptyCart(this.dataset.cartId)">Vaciar Carrito</button>
</div>
<h3 class="mt-2">Total de la compra: ${{totalPurchase}}</h3>



<script src="../js/fetchCart.js"></script>