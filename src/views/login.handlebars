<section class="contCenter">  
    <h1>Login</h1>
    <form action="/api/sessions/login" method="POST" class="form">
        <content class="log">
            <div class="campo">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="campo">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>
        </content>
        <content class="log">
            <button type="submit">Login</button>
            <button class="btnSec"><a href="/api/sessions/github">GitHub</a></button>
            <button class="btnSec"><a href="/register">Register</a></button>
        </content>
    </form>
    
</section>